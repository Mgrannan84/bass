<div class="row">
  

  <% @albums.each do |albums| %>
  <div class="col-md-4">
    <%= link_to(albums) do %>
      
        <img src="<%= albums.cover %>">
        <div class="caption">
          <h3 class="title"><%= albums.title %>  </h3>
          <p class="artist"> <%= albums.artist %>  </p>
        
      </div>
    <% end %>
  </div>
 <% end %>
  
</div>



